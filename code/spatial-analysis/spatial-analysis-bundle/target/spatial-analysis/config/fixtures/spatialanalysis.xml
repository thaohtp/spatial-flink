<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!--************************************************************************
    * Experiments
    *************************************************************************-->

    <!-- wordcount experiment with fixed dataset (flink) -->
    <bean id="experiment.flink.spatialanalysis" parent="experiment.flink-1.2.0" abstract="true">
        <constructor-arg name="command">
            <value><![CDATA[
                 -p 4 -c flink.benchmark.IndexBenchmark -jar ${app.path.apps}/spatial-analysis-flink-jobs-1.0-SNAPSHOT.jar --input "/jml/data/test/spatial_analysis_flink/input/reduced_20170507.csv" --output "/jml/data/test/spatial_analysis_flink/dummy_test" --samplerate 0.8 --nodeperentry 4 --nbdimension 2
            ]]></value>
        </constructor-arg>
        <constructor-arg name="outputs">
            <set>
            </set>
        </constructor-arg>
    </bean>

    <!--************************************************************************
    * Suites
    *************************************************************************-->

    <!-- suite for local development and testing -->
    <bean id="spatialanalysis.default" class="org.peelframework.core.beans.experiment.ExperimentSuite">
        <constructor-arg name="experiments">
            <list value-type="org.peelframework.core.beans.experiment.Experiment">
                <bean parent="experiment.flink.spatialanalysis">
                    <constructor-arg name="name" value="spatialanalysis.flink"/>
                    <constructor-arg name="inputs">
                        <set>
                        </set>
                    </constructor-arg>
                    <constructor-arg name="config" value=""/>
                </bean>
            </list>
        </constructor-arg>
    </bean>
</beans>